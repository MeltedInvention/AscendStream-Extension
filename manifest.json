{
    "manifest_version": 3,
    "name": "AscendStream - IP and Email Leak Protection",
    "version": "1.0.2",
    "description": "Protect your privacy while streaming and screen-sharing, ensuring your personal details remain hidden from your audience.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["contentScript.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  